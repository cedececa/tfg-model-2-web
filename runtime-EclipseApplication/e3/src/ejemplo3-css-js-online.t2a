AppName: 'Ejemplo3'
 
StyleGlobal {
	StyleClass * { 
	    box-sizing: border-box;
	}
	
	StyleClass h1 {
	    display: inline-block;
	} 
	 
	StyleClass h2 {
	    display: inline-block;
	} 
	 
	StyleClass h3 {
	    display: inline-block;
	}
	
	StyleClass h4 {
	    display: inline-block;  
	}
	
	StyleClass nav ul li a {
	    display: block;
	    color: white;
	    text-align: center;
	    padding: 14px 16px;
	    text-decoration: none;
	}
	
	StyleClass nav ul li a{ 
		active {
	    	background-color: #04AA6D;		
		} 
	}
	
	StyleClass nav ul {
	    list-style-type: none;
	    margin: 0;
	    padding: 0;
	    overflow: hidden;
	    background-color: #333;
	}
	
	StyleClass nav ul li {
	    display: inline-block;
	    color: white;
	    text-align: center;
	    text-decoration: none;
	}
}


StyleClass cabecera{
	  background-color: #666;
      padding: 30px;
      text-align: center;
      font-size: 35px;
      color: white;
      display: block;
        
}
StyleClass leftNav{
      float: left;
      width: 30%;
      height: 300px;
      /* only for demonstration, should be removed */
      background: #ccc;
      padding: 20px;
}
StyleClass leftNavUl{
      list-style-type: none;
      padding: 0;
}
StyleClass articulo{
      float: left;
      padding: 20px;
      width: 70%;
      background-color: #f1f1f1;
      height: 300px;
}
Comp leftNav{
	sclass{leftNav}
	AllowSlot
}

Comp Cabecera{
	sclass{cabecera} 
	header {
		h2{
	 	"Cities"
	    }
    }
}

StyleClass section{
     after{ 
     	content: "";
        display: table;
        clear: both;
     }
}
StyleClass navUl{
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
}
StyleClass navUlLi{
      float: left;
}
StyleClass liA{
      display: inline-block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      active{
  	      background-color: #04AA6D;	
      }
}

Dom h1 
Dom h2
Dom h3
Dom h4
Dom h5
Dom ul
Dom p
Dom li
Dom a
Dom header
Dom div


Comp Section{
	sclass { section}
	leftNav{
		ul{
			sclass{navUl} 
			li{
				sclass{navUlLi}
				a{
					sclass{liA}
